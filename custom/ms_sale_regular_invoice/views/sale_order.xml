<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_order_regular_invoice_form_inherit" model="ir.ui.view">
            <field name="name">sale_order_regular_invoice_form_inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="action_create_regular_invoice" type="object" string="Create Regular Invoice" invisible="invoice_status != 'to invoice'"/>
                </xpath>

                <xpath expr="//button[@id='create_invoice']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//button[@id='create_invoice_percentage']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>